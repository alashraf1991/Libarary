@model Library.Models.Catalog.AssetIndexModel


<div id="assets">
    <h3>Library Catalog</h3>

    <div id="assetsTable">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Dewey Call Number</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var asset in Model.Assets)
                {
                    <tr class="assetRow">
                        <td class="">
                            <a asp-controller="Catalog" asp-action="Detail" asp-route="@asset.Id">
                                <img src="@asset.Imageurl" class="imageCell" />
                            </a>

                        </td>

                        <td>@asset.Title</td>
                        <td>@asset.AuthorOrDirector</td>
                        <td>@asset.DeweyCallNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>